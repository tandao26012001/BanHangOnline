                </nav>
            </div>
            <div class="col-lg-3 col-md-3">
                <div class="header__nav__option">
                    <a href="#" class="search-switch"><img src="~/Content/assets/client/img/icon/search.png" alt=""></a>
                    <a href="#"><img src="~/Content/assets/client/img/icon/heart.png" alt=""></a>
                    <a href="/gio-hang"><img src="~/Content/assets/client/img/icon/cart.png" alt=""> <span id="checkout_items">0</span></a>
                    @*<div class="price">$0.00</div>*@
                </div>
            </div>
        </div>
        <div class="canvas__open"><i class="fa fa-bars"></i></div>
