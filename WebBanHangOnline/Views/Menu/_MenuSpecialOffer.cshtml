@model IEnumerable<WebBanHangOnline.Models.EF.SpecialOffer>
@{
    ViewBag.Title = "Khuyến mại";
}
@if (Model != null)
{
    foreach (var item in Model)
    {
        <section class="categories spad">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3">
                        <div class="categories__text">
                            <h2><span>@item.TitleProductCategory</span></h2>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="categories__hot__deal">
                            <img src="@item.Image" alt="@item.Title">
                            <div class="hot__deal__sticker">
                                <span>Giảm giá</span>
                                <h5>@item.PercentageDiscount</h5>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 offset-lg-1">
                        <div class="categories__deal__countdown">
                            <span>Khuyễn mãi trong tháng </span>
                            <h2>@item.ProductSaleName</h2>
                            <div class="categories__deal__countdown__timer" id="countdown">
                                <div class="cd-item">
                                    <span>9</span>
                                    <p>Days</p>
                                </div>
                                <div class="cd-item">
                                    <span>1</span>
                                    <p>Hours</p>
                                </div>
                                <div class="cd-item">
                                    <span>50</span>
                                    <p>Minutes</p>
                                </div>
                                <div class="cd-item">
                                    <span>18</span>
                                    <p>Seconds</p>
                                </div>
                            </div>
                            @*<div class="time-counter"><div class="time-countdown clearfix" data-countdown="@item.PromotionTime"><div class="counter-column"><div class="inner"><span class="count">00</span>Days</div></div> <div class="counter-column"><div class="inner"><span class="count">00</span>Hours</div></div>  <div class="counter-column"><div class="inner"><span class="count">00</span>Mins</div></div>  <div class="counter-column"><div class="inner"><span class="count">00</span>Secs</div></div></div></div>*@
                            <a href="/san-pham" class="primary-btn">Shop now</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }
}
