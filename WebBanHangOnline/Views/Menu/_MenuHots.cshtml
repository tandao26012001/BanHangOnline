@model IEnumerable<WebBanHangOnline.Models.EF.ProductCategory>
@{
    ViewBag.Title = "Sản phẩm nổi bật";
}
@if (Model != null && Model.Any())
{
    <!-- product section -->
    <div class="product-section mt-150 mb-150">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 offset-lg-2 text-center">
                    <div class="section-title">
                        <h3><span class="orange-text">@ViewBag.Title</span></h3>
                        <p>Sản phẩm có lượt mua nhiều</p>
                    </div>
                </div>
            </div>

            @Html.Action("Partial_ProductHots", "Products")

        </div>
    </div>
    <!-- end product section -->
}