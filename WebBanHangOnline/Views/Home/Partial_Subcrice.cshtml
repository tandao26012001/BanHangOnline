@model WebBanHangOnline.Models.EF.Subscribe

<!-- Newsletter -->
<div class="col-lg-3 col-md-6">
    <div class="footer-box subscribe">
        <h2 class="widget-title">Đăng ký</h2>
        <p>Đăng ký để nhận được những cập nhật mới nhất.</p>
        @using (Ajax.BeginForm("Subscribe", "Home", new AjaxOptions
        {
            OnBegin = "OnBeginSub",
            OnSuccess = "OnSuccessSub",
            OnFailure = "OnFailureSub"
        }))
        {
            @Html.AntiForgeryToken()
            <script>
                function OnBeginSub() {

                }
                function OnSuccessSub(rs) {
                    if (rs.Success) {
                        alert("Đã đăng ký");
                    }
                }
                function OnFailureSub(rs) { }
            </script>
            <input type="email" placeholder="Your email" name="Email" required="required" data-error="Valid email is required.">
            <button type="submit"><i class="fas fa-paper-plane"></i></button>
        }
    </div>
</div>