@model WebBanHangOnline.Models.EF.Product
@{
    ViewBag.Title = Model.SeoTitle;
    ViewBag.SeoDescription = Model.SeoDescription ?? Model.Title;
    ViewBag.SeoKeyWord = Model.SeoKeywords ?? Model.Title;
    var relatedProducts = (List<WebBanHangOnline.Models.EF.Product>)ViewBag.RelatedProducts;
    ViewBag.Title = "Chi tiết sản phẩm";
}

@if (Model != null)
{<!-- breadcrumb-section -->
    <div class="breadcrumb-section breadcrumb-bg">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 offset-lg-2 text-center">
                    <div class="breadcrumb-text">
                        <p>See more Details</p>
                        <h1>@ViewBag.Title</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end breadcrumb section -->

    <!-- single product -->
    <div class="single-product mt-150 mb-150">
        <div class="container">
            <div class="row">
                <div class="col-md-5">
                    <div class="single-product-img">
                        <img src="@Model.Image" alt="@Model.Title">
                    </div>
                </div>
                <div class="col-md-7">
                    <div class="single-product-content">
                        <h3>@Model.Title</h3>
                        @if (@Model.PriceSale > 0)
                        {
                            <p class="product-price">
                                <span style="color:red;">@WebBanHangOnline.Common.Common.FormatNumber(@Model.Price, 0) đ</span>
                                <span><del>@WebBanHangOnline.Common.Common.FormatNumber(@Model.PriceSale, 0) đ</del></span>
                            </p>
                        }
                        else
                        {
                            <p class="product-price" style="color:red;">
                                <span style="color:red;">@WebBanHangOnline.Common.Common.FormatNumber(@Model.Price, 0) đ</span>
                            </p>
                        }
                        <h3>Mô tả sản phẩm: </h3>
                        <p>@Html.Raw(Model.Detail)</p>
                        <div class="single-product-form">
                            <a href="#" class="cart-btn btnAddToCart" data-id="@Model.Id"><i class="fas fa-shopping-cart"></i>Thêm giỏ hàng</a>
                            <p><strong>Danh mục sản phẩm: </strong>@Model.ProductCategory.Title</p>
                        </div>
                        <h4>Chia sẻ:</h4>
                        <ul class="product-share">
                            <li><a href=""><i class="fab fa-facebook-f"></i></a></li>
                            <li><a href=""><i class="fab fa-twitter"></i></a></li>
                            <li><a href=""><i class="fab fa-google-plus-g"></i></a></li>
                            <li><a href=""><i class="fab fa-linkedin"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end single product -->

    <!-- more products -->
    <div class="more-products mb-150">

        <div class="container">
            <div class="row">
                <div class="col-lg-8 offset-lg-2 text-center">
                    <div class="section-title">
                        <h3><span class="orange-text">Sản phẩm</span> cùng loại</h3>
                    </div>
                </div>
            </div>
            <div class="row">
                @foreach (var item in relatedProducts)
                {
                    var strImge = "";
                    var img = item.ProductImage.FirstOrDefault(x => x.IsDefault);
                    if (img != null)
                    {
                        strImge = img.ImageUrl;
                    }
                    <div class="col-lg-4 col-md-6 text-center">
                        <div class="single-product-item">
                            <div class="product-image">
                                <a href="/chi-tiet/@item.Alias-p @item.Id"><img src="@strImge" alt="@item.Title"></a>
                            </div>
                            <a href="/chi-tiet/@item.Alias-p @item.Id">
                                <h3>@item.Title</h3>
                            </a>
                            @if (@Model.PriceSale > 0)
                            {
                                <p class="product-price">
                                    <span style="color:red;">@WebBanHangOnline.Common.Common.FormatNumber(@Model.Price, 0) đ</span>
                                    <span><del>@WebBanHangOnline.Common.Common.FormatNumber(@Model.PriceSale, 0) đ</del></span>
                                </p>
                            }
                            else
                            {
                                <p class="product-price" style="color:red;">
                                    <span style="color:red;">@WebBanHangOnline.Common.Common.FormatNumber(@Model.Price, 0) đ</span>
                                </p>
                            }
                            <a href="#" class="cart-btn btnAddToCart" data-id="@item.Id"><i class="fas fa-shopping-cart"></i>Thêm giỏ hàng</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <!-- end more products -->

    <!-- Shop Details Section Begin -->
    <section class="shop-details">
        <div class="product__details__pic">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="product__details__breadcrumb">
                            <a href="/">Trang chủ</a>
                            <a href="/san-pham">Cửa hàng</a>
                            <span>Chi tiết sản phẩm</span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-3 col-md-3">
                        @foreach (var item in Model.ProductImage)
                        {
                            <ul class="nav nav-tabs" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" data-toggle="tab" href="#@item.ProductId" role="tab">
                                        <div class="product__thumb__pic set-bg" data-setbg="@item.ImageUrl">
                                        </div>
                                    </a>
                                </li>
                            </ul>
                        }
                        </div>
                    <div class="col-lg-6 col-md-9">
                        <div class="tab-content">
                            @foreach (var item in Model.ProductImage)
                            {
                                <div class="tab-pane active" id="@item.ProductId" role="tabpanel">
                                    <div class="product__details__pic__item">
                                        <img src="@item.ImageUrl" alt="">
                                    </div>
                                </div>
                            }
                            </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="product__details__content">
            <div class="container">
                <div class="row d-flex justify-content-center">
                    <div class="col-lg-8">
                        <div class="product__details__text">
                            <h4>@Model.Title</h4>
                            <div class="rating">
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star-o"></i>
                                <span> - 5 Reviews</span>
                            </div>
                            @if (@Model.PriceSale > 0)
                            {
                                <h3>
                                    @WebBanHangOnline.Common.Common.FormatNumber(@Model.Price, 0) đ
                                    <span>@WebBanHangOnline.Common.Common.FormatNumber(@Model.PriceSale, 0) đ</span>
                                </h3>
                            }
                            else
                            {
                                <h3>
                                    @WebBanHangOnline.Common.Common.FormatNumber(@Model.Price, 0) đ
                                </h3>
                            }
                            <p>
                                @Html.Raw(Model.ShortDescription)
                            </p>
                            <div class="product__details__option">
                                <div class="product__details__option__size">
                                    <span>Size:</span>
                                    <label for="xxl">
                                        xxl
                                        <input type="radio" id="xxl">
                                    </label>
                                    <label class="active" for="xl">
                                        xl
                                        <input type="radio" id="xl">
                                    </label>
                                    <label for="l">
                                        l
                                        <input type="radio" id="l">
                                    </label>
                                    <label for="sm">
                                        s
                                        <input type="radio" id="sm">
                                    </label>
                                </div>
                                <div class="product__details__option__color">
                                    <span>Color:</span>
                                    <label class="c-1" for="sp-1">
                                        <input type="radio" id="sp-1">
                                    </label>
                                    <label class="c-2" for="sp-2">
                                        <input type="radio" id="sp-2">
                                    </label>
                                    <label class="c-3" for="sp-3">
                                        <input type="radio" id="sp-3">
                                    </label>
                                    <label class="c-4" for="sp-4">
                                        <input type="radio" id="sp-4">
                                    </label>
                                    <label class="c-9" for="sp-9">
                                        <input type="radio" id="sp-9">
                                    </label>
                                </div>
                            </div>
                            <div class="product__details__cart__option">
                                <div class="quantity">
                                    <div class="pro-qty">
                                        <input type="text" value="1">
                                    </div>
                                </div>
                                <a href="#" class="primary-btn">add to cart</a>
                            </div>
                            <div class="product__details__btns__option">
                                <a href="#"><i class="fa fa-heart"></i> add to wishlist</a>
                                <a href="#"><i class="fa fa-exchange"></i> Add To Compare</a>
                            </div>
                            <div class="product__details__last__option">
                                <h5><span>Guaranteed Safe Checkout</span></h5>
                                <img src="img/shop-details/details-payment.png" alt="">
                                <ul>
                                    <li><span>SKU:</span> @Model.ProductCode</li>
                                    <li><span>Categories:</span> @Model.ProductCategory.Title</li>
                                    <li><span>Tag:</span> @Model.SeoTitle</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="product__details__tab">
                            <ul class="nav nav-tabs" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" data-toggle="tab" href="#tabs-5"
                                       role="tab">Mô tả</a>
                                </li>
                            </ul>
                            <div class="tab-content">
                                <div class="tab-pane active" id="tabs-5" role="tabpanel">
                                    <div class="product__details__tab__content">
                                        <div class="product__details__tab__content__item">
                                            <p>
                                                @Html.Raw(Model.Detail)
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
