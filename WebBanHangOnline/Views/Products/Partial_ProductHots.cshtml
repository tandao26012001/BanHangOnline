@model IEnumerable<WebBanHangOnline.Models.EF.Product>
@if (Model != null && Model.Any())
{
    foreach (var item in Model)
    {
        var strImge = "";
        var img = item.ProductImage.FirstOrDefault(x => x.IsDefault);
        if (img != null)
        {
            strImge = img.Image;
        }
        <div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item @item.ProductCategory.Alias">
            <!-- Block2 -->
            <div class="block2">
                <div class="block2-pic hov-img0">
                    <div class="rounded text-white position-absolute start-0 top-0 m-4 py-1 px-3" style="background-color: #6c7ae0 ">Hot</div>
                    <img src="@strImge" alt="@item.Title">
                    <a href="/chi-tiet/@item.Alias-@item.ProductCode" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04">
                        Xem chi tiết
                    </a>
                </div>

                <div class="block2-txt flex-w flex-t p-t-14">
                    <div class="block2-txt-child1 flex-col-l ">
                        <a href="/chi-tiet/@item.Alias-@item.ProductCode" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                            @item.Title
                        </a>
                        @if (item.PriceSale > 0)
                        {
                            <span class="stext-105 cl3" style="color:red;">@WebBanHangOnline.Common.Common.FormatNumber(item.PriceSale, 0)đ</span>
                            <span class="stext-105 cl3"><del>@WebBanHangOnline.Common.Common.FormatNumber(item.Price, 0)đ</del></span>
                        }
                        else
                        {
                            <span class="stext-105 cl3" style="color:red;">@WebBanHangOnline.Common.Common.FormatNumber(item.Price, 0)đ</span>
                        }
                    </div>

                    <div class="block2-txt-child2 flex-r p-t-3">
                        <a href="#" class="zmdi zmdi-shopping-cart"></a>
                    </div>
                </div>
            </div>
        </div>
    }
}
