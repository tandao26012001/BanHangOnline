@model WebBanHangOnline.Models.EF.News
@{
    ViewBag.Title = "Cập nhật tin tức";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- page content -->
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Form News</h3>
            </div>
        </div>
        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Form Add New<small></small></h2>
                        <div class="clearfix"></div>
                    </div>
                    @using (Html.BeginForm("Edit", "News", FormMethod.Post, new { }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(x => x.Id)
                        @Html.HiddenFor(x => x.CategoryId)
                        @Html.HiddenFor(x => x.CreatedDate)
                        <div class="x_content">
                            <form class="" action="" method="post" novalidate>
                                <div class="clearfix"></div>
                                <span class="section">@ViewBag.title</span>
                                <div class="field item form-group">
                                    <label class="col-form-label col-md-3 col-sm-3  label-align">Title <span class="required">*</span></label>
                                    <div class="col-md-6 col-sm-6">
                                        @Html.TextBoxFor(x => x.Title, new { @class = "form-control", @required = "required" })

                                    </div>
                                </div>
                                <div class="field item form-group">
                                    <label class="col-form-label col-md-3 col-sm-3  label-align">Image <span class="required">*</span></label>
                                    <div class="col-md-5 col-sm-6">
                                        @Html.TextBoxFor(x => x.Image, new { @id = "txtImage", @class = "form-control", @required = "required", @readonly = "readonly" })
                                    </div>
                                    <div class="nav navbar-right panel_toolbox">
                                        <input type="button" value="Tải ảnh" onclick="BrowseServer('txtImage');" />
                                    </div>
                                </div>
                                <div class="field item form-group">
                                    <label class="col-form-label col-md-3 col-sm-3  label-align">Description <span class="required">*</span></label>
                                    <div class="col-md-6 col-sm-6">
                                        @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="field item form-group">
                                    <label class="col-form-label col-md-3 col-sm-3  label-align">Detail <span class="required">*</span></label>
                                    <div class="col-md-6 col-sm-6">
                                        @Html.TextAreaFor(x => x.Detail, new { @class = "form-control", @id = "txtDetail", @required = "required" })
                                    </div>
                                </div>
                                <div class="field item form-group">
                                    <label class="col-form-label col-md-3 col-sm-3  label-align">IsActive<span class="required">*</span></label>
                                    <div class="col-md-6 col-sm-6">
                                        @Html.CheckBoxFor(x => x.IsActive, new { @required = "required" })
                                    </div>
                                </div>
                                <div class="field item form-group">
                                    <label class="col-form-label col-md-3 col-sm-3  label-align">Seo Title <span class="required">*</span></label>
                                    <div class="col-md-6 col-sm-6">
                                        @Html.TextAreaFor(x => x.SeoTitle, new { @class = "form-control", @required = "required" })
                                    </div>
                                </div>
                                <div class="field item form-group">
                                    <label class="col-form-label col-md-3 col-sm-3  label-align">Seo Description <span class="required">*</span></label>
                                    <div class="col-md-6 col-sm-6">
                                        @Html.TextAreaFor(x => x.SeoDescription, new { @class = "form-control", @required = "required" })
                                    </div>
                                </div>
                                <div class="field item form-group">
                                    <label class="col-form-label col-md-3 col-sm-3  label-align">Seo Keywords <span class="required">*</span></label>
                                    <div class="col-md-6 col-sm-6">
                                        @Html.TextAreaFor(x => x.SeoKeywords, new { @class = "form-control", @required = "required" })
                                    </div>
                                </div>
                                <div class="ln_solid">
                                    <div class="form-group">
                                        <div class="col-md-6 offset-md-3">
                                            <button type='submit' class="btn btn-primary">Submit</button>
                                            <button type='reset' class="btn btn-success">Reset</button>
                                            <a class="btn btn-danger" type="button" href="/admin/news">Back</a>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /page content -->

@section  scripts{
<script>
    $(document).ready(function () {
        CKEDITOR.replace('txtDetail', {
            customConfig: '/content/ckeditor/config.js',
            extraAllowedContent: 'span',
        });
    });
    function BrowseServer(field) {
        var finder = new CKFinder();
        finder.selectActionFunction = function (fileUrl) {
            document.getElementById(field).value = fileUrl;
        };
        finder.popup();
    }

</script>
}