@using WebBanHangOnline.Common
@using (Ajax.BeginForm("AddSetting", "SettingSystem", new AjaxOptions
{
    OnBegin = "OnBegin",
    OnSuccess = "OnSuccess",
    OnFailure = "OnFailure"
}))
{
    <script>
        function OnBegin() {
            $('#load_page').html('Đang lưu...');
        }
        function OnSuccess(rs) {
            $('#load_page').html('');
        }
        function OnFailure(rs) {

        }
    </script>
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="right_col" role="main">
        <div class="">
            <div class="page-title">
                <div class="title_left">
                    <h3>@ViewBag.Title</h3>
                </div>
            </div>

            <div class="clearfix"></div>

            <div class="row" style="display: block;">
                <div class="col-md-12 col-sm-12  ">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>@ViewBag.title</h2>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <ul class="nav nav-tabs bar_tabs" id="myTab" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">Seo</a>
                                </li>
                            </ul>

                            <div class="tab-content" id="myTabContent">

                                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                                    <div class="col-md-12 ">
                                        <div class="x_panel">
                                            <div class="x_content">
                                                <br>
                                                <form class="form-label-left input_mask">
                                                    <div class="form-group row">
                                                        <label class="col-form-label col-md-2 col-sm-3">Tiêu đề trang</label>
                                                        <input type="text" name="SettingTitle" class="form-control" value="@SettingHelper.GetValue("SettingTitle")" />
                                                    </div>
                                                    <div class="form-group row">
                                                        <label class="col-form-label col-md-2 col-sm-3">Logo</label>
                                                        <div class="input-group">
                                                            <div class="custom-file">
                                                                <input type="text" value="@SettingHelper.GetValue("SettingLogo")" name="SettingLogo" id="txtSettingLogo" class="form-control" />
                                                            </div>
                                                            <div class="input-group-append">
                                                                <input type="button" value="Tải ảnh" onclick="BrowseServer('txtSettingLogo');" />
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="form-group row">
                                                        <label class="col-form-label col-md-2 col-sm-3">Hotline</label>
                                                        <input type="text" value="@SettingHelper.GetValue("SettingHotline")" name="SettingHotline" class="form-control" />
                                                    </div>
                                                    <div class="form-group row">
                                                        <label class="col-form-label col-md-2 col-sm-3">Email</label>
                                                        <input type="text" value="@SettingHelper.GetValue("SettingEmail")" name="SettingEmail" class="form-control" />
                                                    </div>
                                                    <div class="form-group row">
                                                        <label class="col-form-label col-md-2 col-sm-3">Address</label>
                                                        <input type="text" value="@SettingHelper.GetValue("SettingAddress")" name="SettingAddress" class="form-control" />
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
                                    <div class="item form-group">
                                        <label class="col-form-label col-md-2 col-sm-3 label-align">Tiêu đề seo</label>
                                        <input type="text" value="@SettingHelper.GetValue("SettingTitleSeo")" name="SettingTitleSeo" class="form-control" />
                                    </div>
                                    <div class="item form-group">
                                        <label class="col-form-label col-md-2 col-sm-3 label-align">Mô tả seo</label>
                                        <textarea name="SettingDesSeo" class="form-control" rows="3">@SettingHelper.GetValue("SettingDesSeo")</textarea>
                                    </div>
                                    <div class="item form-group">
                                        <label class="col-form-label col-md-2 col-sm-3 label-align">Từ khóa seo</label>
                                        <textarea name="SettingKeySeo" class="form-control" rows="3">@SettingHelper.GetValue("SettingKeySeo")</textarea>
                                    </div>
                                </div>

                            </div>
                            <div class="ln_solid"></div>
                            <div class="form-group row">
                                <div class="col-md-9 col-sm-9  offset-md-3">
                                    <button type="submit" class="btn btn-success">Lưu</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
